{{define "game-board"}}
<main
  class="m-4 text-river-bed-600 font-extrabold flex flex-col items-center justify-center space-y-4"
>
  <!-- Score -->
  <div class="flex space-x-2 text-4xl">
    <div>Score:</div>
    <div>{{.CurrentScore}}</div>
  </div>
  <!-- Actual Board -->
  <div
    class="flex flex-col border-2 border-river-bed-800 bg-cover"
    style="background-image: url('https://image.tmdb.org/t/p/w1280/{{.Current.Poster}}');"
  >
    {{range $rowIdx, $row := .Board.Tiles}}
    <div class="flex text-sm">
      {{range $tileIdx, $tile := $row}} {{if $tile.Selected}}
      {{ template
      "selected-tile" .}}
      {{else if $tile.Flipped}}
      {{ template "flipped-tile"
      .}}
      {{else}} {{template "default-tile" .}} {{ end }} {{ end }}
    </div>
    {{ end }}
  </div>
  <div class="w-full">
    {{ if .Selected}}
    {{template "flip-button" newFlipButton "Flip" false .Selected}}
    {{ else }}
    {{template "flip-button" newFlipButton "Flip" true .Selected}}
    {{ end }}
  </div>
</main>
{{ end }}
