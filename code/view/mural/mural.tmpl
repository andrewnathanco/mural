{{ define "mural" }}
  <html lang="en-US">
    <head>
      <title>Mural</title>
      <link href="/static/styles.css?{{ getVersion }}" rel="stylesheet" />
      <link rel="icon" type="image/x-icon" href="/static/img/favicon.ico" />
      <meta charset="utf-8" />
      <meta name="author" content="Andrew Nathan" />
      <meta name="viewport" content="width=device-width,initial-scale=1" />

      <!-- HTMX -->
      <script src="/static/js/htmx.min.js"></script>

      <!-- Analytics -->
      <script
        defer
        data-domain="mural.andrewnathan.net"
        src="https://plausible.io/js/script.js"
      ></script>
    </head>

    <body
      id="body"
      class="m-8 bg-desert-sand-200 text-river-bed-600 font-extrabold flex flex-col items-center"
    >
      <div class="flex flex-col items-center justify-center">
        <!-- Content -->
        <div class="md:w-96 flex flex-col items-center space-y-4">
          <!-- Header -->
          <div class="flex flex-col space-y-2">
            <div class="text-5xl flex space-x-2 items-center">
              <div>Mural #{{ .Game.GameKey }}</div>
              <div
                class="font-semibold w-min h-min text-gray-600 text-xs border-2 px-1 border-river-bed-700 rounded-lg"
              >
                {{ getVersion }}
              </div>
            </div>
            <div class="text-md flex space-x-2 items-center">
              <div class="text-contessa-500 text-4xl">
                {{ .Game.NumberOfSessions }}
              </div>
              <div>other players have done today's Mural.</div>
            </div>
          </div>
          <!-- Info Button -->
          <div class="w-full">
            {{ template "info-button" newInfoButton "Info" .Session }}
          </div>

          <!-- Divider -->
          <div class="h-1 w-full rounded-full bg-river-bed-600"></div>
          <!-- Game Board -->
          <div class="text-3xl flex space-x-2 items-center flex-col">
            <div id="game-board">{{ template "game-board" . }}</div>
          </div>
        </div>
      </div>
    </body>
  </html>
{{ end }}
