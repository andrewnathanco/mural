{{ define "mural"}}
<div class="flex flex-col items-center justify-center">
  <!-- Content -->
  <div class="w-96 flex flex-col items-center space-y-4">
    <!-- Header -->
    <div class="text-5xl flex space-x-2 items-center">
      <div>Mural</div>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-8 h-8 hover:cursor-pointer"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z"
        />
      </svg>
    </div>

    <!-- Divider -->
    <div class="h-1 w-96 rounded-full bg-river-bed-600"></div>
    <!-- Game Board -->
    <div class="text-3xl flex space-x-2 items-center flex-col">
      <div id="game-board">{{ template "game-board" .}}</div>
    </div>
  </div>
  <!-- Answers -->
  {{ template "answers" .}}
</div>
{{ end }}
