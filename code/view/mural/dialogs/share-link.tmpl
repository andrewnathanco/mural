{{ define "share-link" }}
  <div class="flex flex-col w-full">
    <input
      type="search"
      id="search-dropdown"
      class="block p-2.5 w-full z-20 text-sm text-gray-900 bg-gray-50 rounded-lg rounded-s-gray-100 rounded-s-2 border border-gray-300 focus:ring-blue-500 focus:border-blue-500 "
      placeholder="Search"
      value="{{ . }}"
      required
    />
    <div
      id="share-button"
      class="

      flex space-x-4
    w-full p-2 text-base text-desert-sand-100 rounded-md 
    justify-center items-center
      border-dingley-700 border-2
        hover:cursor-pointer bg-dingley-700 hover:bg-dingley-800
    "
    >
      Copy
    </div>

    <div
      class="
      flex space-x-4
    w-full p-2 text-base text-desert-sand-100 rounded-md 
    justify-center items-center
      border-dingley-700 border-2
        hover:cursor-pointer bg-dingley-700 hover:bg-dingley-800
    "
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5"
        />
      </svg>

      <div>Send</div>
    </div>
  </div>
{{ end }}
