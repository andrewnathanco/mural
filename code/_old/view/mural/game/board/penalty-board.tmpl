{{ define "penalty-board" }}
  <div>
    <main
      class="m-4 text-river-bed-600 font-extrabold flex flex-col items-center justify-center space-y-4"
    >
      <!-- Actual Board -->
      <div class="flex flex-col border-2 border-river-bed-800 bg-cover">
        {{ range $rowIdx, $row := .Session.Board }}
          <div class="flex text-sm">
            {{ range $tileIdx, $tile := $row }}
              {{ template "penalty-tile" newSelectTile . true }}
            {{ end }}
          </div>
        {{ end }}
      </div>
    </main>
  </div>
{{ end }}
